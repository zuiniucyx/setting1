<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="742dp"
    android:layout_height="75dp" >

    <TextView
        android:id="@+id/tv_wifi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="34dp"
        android:maxEms="15"
        android:textColor="#000000"
        android:lines="1"
        android:textSize="24dp" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="73dp"
        android:id="@+id/wifi_item_rl"
        android:layout_alignParentRight="true"
         >

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="26dp"
            android:src="@drawable/selector_next_bg" />

        <ImageView
            android:id="@+id/iv_wifi_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_next"
            android:src="@drawable/wifi_setting_list" />

        <ImageView
            android:id="@+id/iv_wifi_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:layout_toLeftOf="@id/iv_wifi_level"
            android:src="@drawable/ic_setting_wifi_lock" />

        <TextView
            android:id="@+id/wifi_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:layout_toLeftOf="@id/iv_wifi_level"
            android:textColor="#00aa00"
            android:textSize="24dp" />
    </RelativeLayout>
	<View
	    android:layout_width="680dp"
	    android:layout_height="1dp"
	    android:layout_below="@id/wifi_item_rl"
	    android:layout_centerHorizontal="true"
	    android:background="#bcbcbc" />
</RelativeLayout>