<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="556dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="556dp"
        android:layout_height="68dp"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="24dp" />

    <View style="@style/view_style" />

    <RelativeLayout
        android:layout_width="556dp"
        android:layout_height="210dp"
        android:gravity="center_horizontal" >

        <EditText
            android:id="@+id/et_dialog_pwd"
            android:layout_width="432dp"
            android:layout_height="60dp"
            android:layout_marginTop="52dp"
            android:password="true"
            android:hint="请输入八位以上密码"
            android:background="@drawable/rounded_editview"
            android:textSize="24dp" />

        <CheckBox
            android:id="@+id/dialog_show_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_dialog_pwd"
            android:layout_marginTop="30dp"
            android:text=" 显示密码"
            android:textColor="#414141"
            android:textSize="20dp" />
    </RelativeLayout>

    <View style="@style/view_style" />

    <LinearLayout
        android:layout_width="556dp"
        android:layout_height="68dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:background="@drawable/selector_cancel_bg"
            android:text="取消"
            android:textSize="24dp" />

        <View android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c4c4c4"/>
        
        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
             android:textColor="@color/text_color"
             android:background="@drawable/selector_sure_bg"
            android:text="连接"
            android:textSize="24dp" />
    </LinearLayout>

</LinearLayout>